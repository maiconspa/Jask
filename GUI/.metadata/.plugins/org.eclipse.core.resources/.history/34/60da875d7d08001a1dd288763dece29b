		frame.getContentPane().add(txtpnJask);
		
		JTextPane textSubt = new JTextPane();
		textSubt.setText("    otimizar tarefas,\norganizar projetos.");
		textSubt.setFont(new Font("Verdana", Font.PLAIN, 12));
		textSubt.setBounds(147, 133, 127, 54);
		frame.getContentPane().add(textSubt);
		
		JButton btnEntrar = new JButton("Entre");
		btnEntrar.setBounds(100, 300, 200, 30);
		frame.getContentPane().add(btnEntrar);
		
		JButton btnCadastro = new JButton("Cadastre-se");
		btnCadastro.setBounds(100, 340, 200, 30);
		frame.getContentPane().add(btnCadastro);
		
